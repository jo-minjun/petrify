{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@petrify/core": ["packages/core/src/index.ts"]
    }
  },
  "include": ["src", "packages/core/src"],
  "exclude": ["node_modules", "dist"]
}
